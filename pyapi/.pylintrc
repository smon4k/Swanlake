[MASTER]
# 忽略的文件或目录
ignore=.git,__pycache__,.venv,venv

[MESSAGES CONTROL]
# 禁用的检查
disable=
    broad-except,                      # C0103: 捕获过于宽泛的异常 Exception
    logging-fstring-interpolation,     # W1203: 在日志中使用 f-string
    logging-format-interpolation,      # W1202: 在日志中使用 % 格式化
    line-too-long,                     # C0301: 行太长
    too-many-locals,                   # R0914: 函数中局部变量过多
    too-many-branches,                 # R0912: 函数中分支过多
    too-many-statements,               # R0915: 函数中语句过多
    too-many-arguments,                # R0913: 函数参数过多
    too-many-instance-attributes,      # R0902: 类实例属性过多
    unused-variable,                   # W0612: 未使用的变量（保留用于调试）
    unused-argument,                   # W0613: 未使用的参数
    redefined-outer-name,              # W0621: 重定义外部作用域的名称
    invalid-name,                      # C0103: 变量名不符合命名规范
    missing-function-docstring,        # C0116: 缺少函数文档字符串
    missing-class-docstring,           # C0115: 缺少类文档字符串
    missing-module-docstring,          # C0114: 缺少模块文档字符串
    fixme,                             # W0511: TODO/FIXME 注释
    trailing-whitespace,               # C0303: 行尾空格
    wrong-import-position,             # C0413: 导入位置错误

[FORMAT]
# 最大行长度
max-line-length=150

# 最大模块行数
max-module-lines=2000

[DESIGN]
# 函数/方法最大参数数量
max-args=10

# 函数/方法最大局部变量数量
max-locals=25

# 函数/方法最大分支数量
max-branches=20

# 函数/方法最大语句数量
max-statements=100

[BASIC]
# 良好的变量名规则
good-names=i,j,k,ex,Run,_,id,db,op,fp,e,f,n,x,y,z

[SIMILARITIES]
# 最小相似行数
min-similarity-lines=10

[REPORTS]
# 不显示完整报告
reports=no

# 只显示消息
output-format=text

