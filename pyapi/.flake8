[flake8]
# 设置最大行长度为 150（根据你的代码风格调整）
max-line-length = 150

# 忽略的错误代码
ignore = 
    E501,  # 行长度超过限制
    W293,  # 空白行包含空格
    W291,  # 行尾有多余空格
    E302,  # 类或函数定义前需要2个空行
    E303,  # 空白行过多
    E265,  # 块注释应该以 '# ' 开头
    E261,  # 行内注释前至少需要两个空格
    E262,  # 行内注释应该以 '# ' 开头
    E202,  # 括号前有多余空格
    E203,  # 冒号前有多余空格
    E225,  # 运算符周围缺少空格
    E251,  # 关键字参数赋值周围有意外空格
    W503,  # 二元运算符之前换行
    W504,  # 二元运算符之后换行
    E701,  # 多个语句在同一行
    E741,  # 不要使用单字母变量名 l, O, I

# 排除的目录
exclude = 
    .git,
    __pycache__,
    .venv,
    venv,
    env,
    build,
    dist,
    *.egg-info

# 每行最大复杂度
max-complexity = 15

